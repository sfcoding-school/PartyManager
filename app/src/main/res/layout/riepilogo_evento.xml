<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ddd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:text="@string/luogo"
        android:textStyle="bold"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:text="@string/quando"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView3"
        android:text="@string/dove_vediamo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_luogo"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:hint="@string/daDEf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_data"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/txt_luogo"
        android:layout_alignStart="@+id/txt_luogo"
        android:layout_marginLeft="15dp"
        android:hint="@string/daDEf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_orario"
        android:textSize="16sp"
        android:layout_above="@+id/textView3"
        android:layout_toRightOf="@+id/txt_data"
        android:layout_marginLeft="15dp"
        android:hint="@string/daDEf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_dove_vediamo"
        android:textSize="16sp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/daDEf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txt_orarioI"
        android:textSize="16sp"
        android:hint="@string/daDEf"
        android:layout_alignTop="@+id/txt_dove_vediamo"
        android:layout_toLeftOf="@+id/txt_orario" />
</RelativeLayout>