<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Notifiche">

        <CheckBoxPreference
            android:key="checkbox_notifiche_all"
            android:title="Abilita notifiche"
            android:summary="" />

        <CheckBoxPreference
            android:key="checkbox_preference1"
            android:title="Nuovo Evento"
            android:summary="Invito a nuovo evento" />

        <CheckBoxPreference
            android:key="checkbox_preference2"
            android:title="Nuova Domanda"
            android:summary="Creazione Nuova Domanda" />

        <CheckBoxPreference
            android:key="checkbox_preference3"
            android:title="Nuova Risposta"
            android:summary="" />

        <CheckBoxPreference
            android:key="checkbox_preference4"
            android:title="Ricorda evento"
            android:summary="Ricevi una notifica poco prima dell\'evento" />

        <CheckBoxPreference
            android:key="checkbox_preference5"
            android:title="Nuovo Utente"
            android:summary="Ingresso nuovo amico in un Evento" />

        <ListPreference
            android:title="LED"
            android:summary="Seleziona il colore del LED per le notifiche"
            android:key="downloadType"
            android:defaultValue="16777215"
            android:entries="@array/listArrayLED"
            android:entryValues="@array/listValuesLED" />

        <CheckBoxPreference
            android:key="checkbox_vibrate"
            android:title="Vibrazione"
            android:summary="Abilita vibrazione ricezione notifiche"
            android:defaultValue="true"/>

    </PreferenceCategory>


</PreferenceScreen>
